<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9900">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Learn Kotlin"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/label"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            >

            <Button
                android:id="@+id/recyclerViewLst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/customListView"
                android:layout_marginBottom="10dp"
                android:text="Custom Recycler View List"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/customListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/simpleListView"
                android:layout_marginBottom="10dp"
                android:text="Custom ListView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/simpleListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Simple ListView"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/tabLayoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Tab Layout / View Pager"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/retrofitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Retrofit"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bottomNavigationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Bottom Navigation"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>